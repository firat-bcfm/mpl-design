pipeline {
    agent any

    parameters {
        booleanParam(name: 'SKIP_APPROVAL', defaultValue: false, description: 'Skip manual approval')
    }

    environment {
        PROJECT_NAME = 'ozkan-prod'
        ENVIRONMENT = 'production'
    }

    stages {
        stage('Checkout') {
            steps {
                echo "========================================="
                echo "OZKAN PROD - Step 1/6: Checkout"
                echo "========================================="
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo "========================================="
                echo "OZKAN PROD - Step 2/6: Build"
                echo "========================================="
                script {
                    sh 'mvn clean package -DskipTests=false'
                }
            }
        }

        stage('Test') {
            steps {
                echo "========================================="
                echo "OZKAN PROD - Step 3/6: Test"
                echo "========================================="
                script {
                    sh 'mvn test jacoco:report'
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }

        stage('Deploy') {
            steps {
                echo "========================================="
                echo "OZKAN PROD - Step 4/6: Deploy"
                echo "========================================="
                script {
                    if (!params.SKIP_APPROVAL) {
                        input message: 'Deploy to PRODUCTION?', ok: 'Deploy'
                    }
                    echo "Deploying to prod.ozkan.com"
                    // Add deployment commands here
                }
            }
        }

        stage('Smoke Test') {
            steps {
                echo "========================================="
                echo "OZKAN PROD - Step 5/6: Smoke Test"
                echo "========================================="
                script {
                    echo "Running production smoke tests..."
                    // sh 'curl https://prod.ozkan.com/health'
                }
            }
        }

        stage('Validation') {
            steps {
                echo "========================================="
                echo "OZKAN PROD - Step 6/6: Validation"
                echo "========================================="
                script {
                    echo "Validating production deployment..."
                }
            }
        }
    }

    post {
        success {
            echo "✓ OZKAN PROD Pipeline - SUCCESS"
        }
        failure {
            echo "✗ OZKAN PROD Pipeline - FAILED"
        }
    }
}
