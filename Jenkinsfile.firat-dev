@Library('mpl') _

/**
 * Firat Development Pipeline
 * Uses common company-wide settings
 */

FiratDevPipeline {
    // Proje özeli
    projectName = 'firat-app'
    customMessage = 'Firat deployment başarılı!'

    // ORTAK AYARLAR (Ozkan ile aynı)
    slackChannel = '#team-deployments'
    dockerRegistry = 'docker.io/company'
    grafanaUrl = 'https://grafana.company.com'
    minTestCoverage = '80%'
    showGitInfo = true

    // TRIVY SECURITY SCAN - FIRAT Özel Ayarlar
    'trivy.enabled' = true
    'trivy.scanType' = 'fs'  // filesystem scan
    'trivy.severity' = 'HIGH,CRITICAL'
    'trivy.exitCode' = '0'  // DEV'de fail etme
    'trivy.format' = 'table'
}
