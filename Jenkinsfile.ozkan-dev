@Library('mpl') _

/**
 * Ozkan Development Pipeline
 * Uses common company-wide settings
 */

OzkanDevPipeline {
    // Proje özeli
    projectName = 'ozkan-app'
    customMessage = 'özkan edge blue içer'

    // ORTAK AYARLAR (Firat ile aynı)
    slackChannel = '#team-deployments'
    dockerRegistry = 'docker.io/company'
    grafanaUrl = 'https://grafana.company.com'
    minTestCoverage = '80%'
    showGitInfo = true

    // TRIVY SECURITY SCAN - OZKAN Özel Ayarlar
    'trivy.enabled' = true
    'trivy.scanType' = 'image'  // Docker image scan
    'trivy.severity' = 'MEDIUM,HIGH,CRITICAL'
    'trivy.exitCode' = '0'  // DEV'de fail etme
    'trivy.format' = 'json'  // JSON format
}
